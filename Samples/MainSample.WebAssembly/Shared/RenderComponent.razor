@typeparam T

<SplitContainer>
    <Left>
        <DynamicComponent Type="typeof(T)" @ref="dynamicReference"></DynamicComponent>
        @if (ChildContent != null && rendered && Component != null)
        {
            @ChildContent(Component)
        }
    </Left>
    <Right>
        @if (rendered && Component != null)
        {
            <MudExObjectEdit MetaConfiguration="@Configure()" Value="@Component"></MudExObjectEdit>
        }
    </Right>
</SplitContainer>
