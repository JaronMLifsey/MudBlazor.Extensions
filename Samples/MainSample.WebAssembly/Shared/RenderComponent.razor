@typeparam T

<SplitContainer>
    <Left>
        <DynamicComponent Type="GetRenderType()" @ref="dynamicReference"></DynamicComponent>
        @if (ChildContent != null && rendered && Component != null)
        {
            @ChildContent(Component)
        }
    </Left>
    <Right>
        @if (rendered && Component != null)
        {
            <ComponentPropertyGrid MetaConfiguration="@Configure()" Value="@Component"></ComponentPropertyGrid>
        }
        else
        {
            <MudProgressCircular Style="margin-top: 70%; margin-left: 50%;" Color="Color.Primary" Indeterminate="true" />
        }
    </Right>
</SplitContainer>
