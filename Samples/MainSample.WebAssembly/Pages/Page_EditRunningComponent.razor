@page "/edit-component"
@using MudBlazor.Extensions.Components.ObjectEdit.Options

@attribute [Demo(Group = "MudExObjectEdit", Name = "Edit Running Component", Order = 6, Icon = Icons.Material.Outlined.SettingsInputComponent, ForComponentTypes = new[] { typeof(MudExObjectEdit<>), typeof(MudExObjectEditForm<>) })]

<PageHeader>Edit Running Component Display with MudExObjectEdit</PageHeader>

<DemoComponent PageType="@GetType()">
    <SplitContainer>
        <Left>
            <MudColorPicker @ref="component" PickerVariant="PickerVariant.Static" />
        </Left>
        <Right>
            <MudExObjectEdit MetaConfiguration="@Configure()" Value="@component"></MudExObjectEdit>
        </Right>
    </SplitContainer>
</DemoComponent>


@code {
    MudColorPicker component;

    private Action<ObjectEditMeta<MudColorPicker>> Configure()
    {
        return meta =>
        {
            meta.IgnoreAllReadOnlyFields();
        };
    }

}