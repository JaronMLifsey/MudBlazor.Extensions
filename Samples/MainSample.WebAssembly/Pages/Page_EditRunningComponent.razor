@page "/edit-component"
@attribute [Demo(Group = "ObjectEdit", ForComponentTypes = new[] { typeof(MudExObjectEdit<>), typeof(MudExObjectEditForm<>)})]
@using MudBlazor.Extensions.Components.ObjectEdit.Options

<PageHeader>Edit Running Component Display with MudExObjectEdit</PageHeader>

<DemoComponent PageType="@GetType()">
    <SplitContainer>
        <Left>
            <MudColorPicker @ref="component" PickerVariant="PickerVariant.Static" />
        </Left>
        <Right>
            <MudExObjectEdit MetaConfiguration="@Configure()" Value="@component"></MudExObjectEdit>
        </Right>
    </SplitContainer>
</DemoComponent>


@code {
    ComponentBase component;

    private Action<ObjectEditMeta<ComponentBase>> Configure()
    {
        return meta =>
        {
            meta.IgnoreAllReadOnlyFields();
        };
    }

}