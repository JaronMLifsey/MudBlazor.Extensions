@inject HttpClient Http
@page "/readme"

<MudExGradientText Style="margin-top: -100px;margin-bottom: 30px;" Align="Align.Center" Typo="Typo.h2">MudBlazor.Extensions</MudExGradientText>
<Support />
<DemoMarkdown CenterImagesAndHeadlines="true" Value="@Value"></DemoMarkdown>

@code
{
    protected override async Task OnInitializedAsync()
    {
        MainLayout.Instance.ThemeChanged += (_, _) => StateHasChanged();
        Value = await Http.GetStringAsync("https://raw.githubusercontent.com/fgilde/MudBlazor.Extensions/main/README.md");
    }
    private string Value { get; set; }

}