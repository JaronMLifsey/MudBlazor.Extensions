@page "/splitter"
@attribute [Demo(ForComponentTypes = new [] {typeof(MudExDivider), typeof(MudExSplitter), typeof(MudExSplitPanel)})]


<DemoComponent Title="MudExSplitPanel" PageType="@GetType()">
    <MudCheckBox @bind-Checked="@Splittable" Label="Splittable" />
    <MudCheckBox @bind-Checked="@ColumnLayout" Label="ColumnLayout" />
    <MudCheckBox @bind-Checked="@Reverse" Label="Reverse" />
    <MudExSplitPanel UpdateSizesInPercentage="true" Reverse="@Reverse" Splittable="@Splittable" ColumnLayout="@ColumnLayout" Style="width: 100%; height: 80vh">
        <Left>
            <div style="width: 50%; min-width:350px; height: 50%; min-height:50px; background-color: forestgreen">
                <center>Left part in MudExSplitPanel. (Notice you can also use MudExSplitter directly)</center>
            </div> 
        </Left>
        <Right>
            <div style="width: 50%; min-width:350px; height: 50%; min-height:50px; background-color: red">
                <center>Right part in MudExSplitPanel.</center>
            </div>
        </Right>
    </MudExSplitPanel>
</DemoComponent>

@code{

    public bool Splittable { get; set; } = true;
    public bool ColumnLayout { get; set; } = true;
    public bool Reverse { get; set; } = false;

}

