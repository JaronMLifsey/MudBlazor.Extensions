@using MudBlazor.Extensions.Components.ObjectEdit
@using MudBlazor.Extensions.Components.ObjectEdit.Options
@typeparam TTheme where TTheme : MudTheme


<MudExObjectEditForm LightOverlayLoadingBackground="@(!IsDark ?? false)" 
                     IsLoading="@_isLoading" 
                     AutoSkeletonOnLoad="true" 
                     T="TTheme" 
                     MetaConfiguration="ThemeEditMetaConfiguration" 
                     Value="Theme" 
                     ValueChanged="OnThemeChanged" >
    <ToolBarContent>
        @if (AllowModeToggle)
        {
            <MudExEnumSelect Clearable="false" TEnum="ThemeEditMode" ValueChanged="@EditModeChangedInternally" Value="@EditMode"></MudExEnumSelect>
        }
    </ToolBarContent>
</MudExObjectEditForm>